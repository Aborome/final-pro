<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/restaurantItem_IV_image"
           android:layout_width="match_parent"
           android:layout_height="130dp"
           android:src="@drawable/test"
           android:scaleType="fitXY"
           />

       <TextView
           android:id="@+id/restaurantItem_TV_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Restaurant Name"
           android:maxLines="1"
           android:layout_below="@+id/restaurantItem_IV_image"
           android:layout_centerHorizontal="true"
           android:textColor="@color/black"
           android:textStyle="bold"
           />

       <LinearLayout
           android:layout_below="@+id/restaurantItem_TV_name"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/restaurantItem_TV_points"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1000"
               android:textColor="@color/green"
               android:textStyle="bold"
               />
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/baseline_star_24"
               />
       </LinearLayout>

   </RelativeLayout>
</androidx.cardview.widget.CardView>